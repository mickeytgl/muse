<div class="form">
        <%= form_for @post do |f| %>
        
        <%= f.label :title %>
        <%= f.text_field :title %>
        		
        <%= f.label :link %>
		<%= f.text_field :link %>

		<%= f.label :description %>
		<%= f.text_area :description, rows: 10 %>
		
		<%= f.submit %>
		
		<% end %>
</div>